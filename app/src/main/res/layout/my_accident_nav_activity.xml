<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccidents.MyAccidentNavActivity">

    <ImageView
        android:id="@+id/backbtn"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:onClick="goBackToHome"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/myaccident_logo"
        android:layout_width="236dp"
        android:layout_height="203dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myaccident_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/indigo_daisy"
        android:text="My Accidents"
        android:textColor="#873032"
        android:textSize="60sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            android:onClick="goToReportAccident"
            android:layout_height="118dp" >

            <LinearLayout
                android:checkable="true"
                android:background="@color/cardlight"
                android:elevation="350dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="251dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Report \n Accident" />

                    <ImageView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_undraw_hiring_re_yk5n"
                        android:background="@drawable/shape_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            android:onClick="goToCallingAgent"
            android:layout_height="118dp" >

            <LinearLayout
                android:checkable="true"
                android:background="@color/cardlight"
                android:elevation="350dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="251dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Calling \nAgent" />

                    <ImageView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_undraw_calling_kpbp"
                        android:background="@drawable/shape_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            android:onClick="goToShowCase"
            android:layout_height="118dp" >

            <LinearLayout
                android:checkable="true"
                android:background="@color/cardlight"
                android:elevation="350dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="251dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="My Case" />

                    <ImageView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_undraw_note_list_re_r4u9"
                        android:background="@drawable/shape_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</RelativeLayout>